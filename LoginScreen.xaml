<Window x:Class="BarberShop.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="15" Background="White">
    <Border Background="Black" CornerRadius="10" Margin="10">
        <StackPanel Margin="10">
            <Label Content="LOGIN" Foreground="White" FontSize="30" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="USERNAME" Foreground= "White" HorizontalAlignment="Center" FontSize="20"></Label>
            <TextBox Name ="Username" Background="Gray" Foreground="White" FontSize="20"></TextBox>
            <Label Content="PASSWORD" Foreground= "White" HorizontalAlignment="Center" FontSize="20"></Label>
            <PasswordBox Name ="Password" Background="Gray" Foreground="White" FontSize="20"></PasswordBox>
            <Button Name ="Submit" Click ="Submit_Click" Content="SUBMIT" Margin="70 10" Background="Gray" Foreground="White" FontSize="20"></Button>
        </StackPanel>
    </Border>
</Window>
