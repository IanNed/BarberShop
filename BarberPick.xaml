<Window x:Class="BarberShop.BarberPick"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop"
        mc:Ignorable="d"
        Title="BarberPick" Height="350" Width="380">
    <Border Background="Black" CornerRadius="10" Margin="10">
        <StackPanel Margin="10">
            <Label Content="Select a master" Foreground="White" FontSize="30" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <ComboBox Name ="BarberSelect" Margin="0,40,0,0" Text="Select a barber"  IsEditable="True" HorizontalAlignment="Center"
                IsReadOnly="True" FontSize="18" ></ComboBox>
            <Button Name ="SubmitBarber" Click="SubmitBarber_Click"  Content="SUBMIT" Margin="90 50" Background="Gray" Foreground="White" FontSize="20"></Button>
            <Button Name ="Return" Click="Return_Click"  Content="RETURN" Margin="90 -10" Background="Gray" Foreground="White" FontSize="20"></Button>
        </StackPanel>
    </Border>
</Window>